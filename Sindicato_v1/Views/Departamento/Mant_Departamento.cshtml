@model IEnumerable<Sindicato_v1.Models.ViewModels.SelectDepartamentoViewModel>

@{
    ViewBag.Title = "Mant_Departamento";
}
<br>
<br>
<nav class="navbar navbar-default navbar-fixed-top">
    <div class="container">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavbar">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand" href="#inicio">SIICE</a>
        </div>
        <div class="collapse navbar-collapse" id="myNavbar">
            <ul class="nav navbar-nav navbar-right">
                <li><a href="~/Agremiado/Agremiados">Agremiados</a></li>
                <li><a href="~/Deducciones/BusquedaDeduccion">Deducciones</a></li>
                <li><a href="">Noticias - Foro</a></li>
                <li><a href="~/Gestiones/Gestiones">Gestiones</a></li>
                <li><a>Hola, @ViewData["Nombre"] @ViewData["Apellido"]</a></li>
            </ul>
        </div>
    </div>
</nav>

<ul class="breadcrumb">
    <li><a href="/Home/Index/">Inicio</a></li>
    <li><a href="/Usuario/Administrador/">Administrativo</a></li>
    <li>Gestión de Departamentos</li>
</ul>

<div>
    <h2>Gestión de Departamentos</h2>
    <h5>A continuación se le muestra la lista de departamentos existentes dentro del sistema</h5>
</div>

<hr class="hr-custom" />

<div class="container" style="text-align: left; padding: 5px;">
    <a href="~/Departamento/Nuevo_Departamento" class="btn btn-primary">Nuevo</a>
</div>
<div class="container">
    <div class="table-responsive">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Código</th>
                    <th>Departamento</th>
                    <th>Ubicación</th>
                    <th>Compañia</th>
                    <th>Opciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj_Dep in Model)
                {
                    <tr>
                        <th>@obj_Dep.id_D</th>
                        <td>@obj_Dep.depart</td>
                        <td>@obj_Dep.ubic</td>
                        <td>@obj_Dep.nom_Comp </td>
                        <td>
                            <a class="btn btn-default" href="/Departamento/Editar_Departamento/@obj_Dep.id_D" style="width:80px; height:35px;">Editar</a>
                            @if (obj_Dep.est == 3)
                            {
                                <a class="btn btn-warning" href="/Departamento/Eliminar_Departamento/@obj_Dep.id_D" style="width:80px; height:35px; display:none;">Eliminar</a>
                            }
                            else
                            {
                                <a class="btn btn-warning" href="/Departamento/Eliminar_Departamento/@obj_Dep.id_D" style="width:80px; height:35px;">Eliminar</a>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>