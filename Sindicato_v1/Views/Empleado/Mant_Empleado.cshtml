@model List<Sindicato_v1.Models.ViewModels.SelectEmpleadoViewModel>

@{
    ViewBag.Title = "Mant_Compania";
}
<br>
<br>
<nav class="navbar navbar-default navbar-fixed-top">
    <div class="container">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavbar">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand" href="#inicio">SIICE</a>
        </div>
        <div class="collapse navbar-collapse" id="myNavbar">
            <ul class="nav navbar-nav navbar-right">
                <li><a href="~/Agremiado/Agremiados">Agremiados</a></li>
                <li><a href="~/Deducciones/BusquedaDeduccion">Deducciones</a></li>
                <li><a href="">Noticias - Foro</a></li>
                <li><a href="~/Gestiones/Gestiones">Gestiones</a></li>
                <li><a>Hola, @ViewData["Nombre"] @ViewData["Apellido"]</a></li>
            </ul>
        </div>
    </div>
</nav>

<ul class="breadcrumb">
    <li><a href="/Home/Index/">Inicio</a></li>
    <li><a href="/Usuario/Administrador/">Administrativo</a></li>
    <li>Gestión de Compañias</li>
</ul>

<h2>Gestión de Empleado</h2>

<hr class="hr-custom">

<div class="container" style="text-align: left; padding: 5px;">
    <a href="~/Empleado/Nuevo_Empleado" class="btn btn-primary">Nuevo</a>
</div>

<div class="container">
    <div class="table-responsive">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Código</th>
                    <th>Cedula</th>
                    <th>Nombre</th>
                    <th>P. Apellido</th>
                    <th>S. Apellido</th>
                    <th>Cargo</th>
                    <th>Email</th>
                    <th>Usuario</th>
                    <th>Rol</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj_Emp in Model)
                {
                    <tr>
                        <th>@obj_Emp.id_Empleado</th>
                        <td>@obj_Emp.cedula</td>
                        <td>@obj_Emp.nombre</td>
                        <td>@obj_Emp.primer_apellido</td>
                        <td>@obj_Emp.segundo_apellido</td>
                        <td>@obj_Emp.cargo</td>
                        <td>@obj_Emp.correo_Electronico</td>
                        <td>@obj_Emp.tipo_Usuario</td>
                        <td>@obj_Emp.tipo_Rol</td>
                        <td>
                            <a class="btn btn-default" href="/Empleado/Editar_Empleado/@obj_Emp.id_Persona" style="width:80px; height:35px;">Editar</a>
                            <a class="btn btn-warning" href="/Compania/Eliminar_Compania/@obj_Emp.id_Persona" style="width:80px; height:35px;">Eliminar</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>