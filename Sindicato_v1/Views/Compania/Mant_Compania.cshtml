@model List<Sindicato_v1.Models.ViewModels.SelectCompaniaViewModel>

@{
    ViewBag.Title = "Mant_Compania";
}
<br>
<br>
<nav class="navbar navbar-default navbar-fixed-top">
    <div class="container">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavbar">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand" href="#inicio">SIICE</a>
        </div>
        <div class="collapse navbar-collapse" id="myNavbar">
            <ul class="nav navbar-nav navbar-right">
                <li><a href="~/Agremiado/Agremiados">Agremiados</a></li>
                <li><a href="~/Deducciones/BusquedaDeduccion">Deducciones</a></li>
                <li><a href="">Noticias - Foro</a></li>
                <li><a href="~/Gestiones/Gestiones">Gestiones</a></li>
                <li><a>Hola, @ViewData["Nombre"] @ViewData["Apellido"]</a></li>
            </ul>
        </div>
    </div>
</nav>

<ul class="breadcrumb">
    <li><a href="/Home/Index/">Inicio</a></li>
    <li><a href="/Usuario/Administrador/">Administrativo</a></li>
    <li>Gestión de Compañias</li>
</ul>

<h2>Gestión de Compañias</h2>

<hr class="hr-custom">

<div class="container" style="text-align: left; padding: 5px;">
    <a href="~/Compania/Nueva_Compania" class="btn btn-primary">Nuevo</a>
</div>

<div class="container">
    <div class="table-responsive">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Código</th>
                    <th>R. Social</th>
                    <th>C. Jurídica</th>
                    <th>Nombre</th>
                    <th>Dirección</th>
                    <th>Teléfono</th>
                    <th>Email</th>
                    <th>Opciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj_Comp in Model)
                {
                    <tr>
                        <th>@obj_Comp.id_Comp</th>
                        <td>@obj_Comp.razon_Soc</td>
                        <td>@obj_Comp.cedula_Jud</td>
                        <td>@obj_Comp.nombre_Comp </td>
                        <td>@obj_Comp.direc</td>
                        <td>@obj_Comp.tel</td>
                        <td>@obj_Comp.correo</td>
                        <td>
                            <a class="btn btn-default" href="/Compania/Editar_Compania/@obj_Comp.id_Comp" style="width:80px; height:35px;">Editar</a>
                            @if (obj_Comp.estado == 3)
                            {
                                <a class="btn btn-warning" href="/Compania/Eliminar_Compania/@obj_Comp.id_Comp" style="width:80px; height:35px; display:none;";>Eliminar</a>
                            }
                            else
                            {
                                <a class="btn btn-warning" href="/Compania/Eliminar_Compania/@obj_Comp.id_Comp" style="width:80px; height:35px;">Eliminar</a>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>