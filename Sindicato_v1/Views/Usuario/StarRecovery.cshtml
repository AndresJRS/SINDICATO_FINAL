@model Sindicato_v1.Models.ViewModels.RecoveryViewModel
@{
    ViewBag.Title = "StarRecovery";
}
<br />
<br />
<nav class="navbar navbar-default navbar-fixed-top">
    <div class="container">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavbar">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand" href="#inicio">SIICE</a>
        </div>
    </div>
</nav>

<h2>Recuperación de su cuenta</h2>

<hr class="hr-custom"/>

<div class="row">
    <div class="col-sm-12">
        <div class="form-style">
            <form action="@Url.Content("~/Usuario/StarRecovery" )" method="post">
                <label>Escribe aqui tu correo electronico:</label>
                @Html.TextBoxFor(d => d.Email, null, new { @class = "form-control" })
                @Html.ValidationMessageFor(d => d.Email, null, new { style = "color:red;" })
                <br />
                <div class="text-right">
                    <button href="~/Usuario/Recovery" class="btn btn-primary">Solicitar cambio de contraseña</button>
                </div>
            </form>
        </div>
    </div>
</div>

