@model Sindicato_v1.Models.ViewModels.GestionesViewModel
@{
    ViewBag.Title = "Nueva_Gestion";
}
<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
<link href="~/Content/validationEngine.jquery.css" rel="stylesheet" type="text/css" />
<br>
<br>
<nav class="navbar navbar-default navbar-fixed-top">
    <div class="container">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavbar">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand" href="/Home/Index/">SIICE</a>
        </div>
        <div class="collapse navbar-collapse" id="myNavbar">
            <ul class="nav navbar-nav navbar-right">
                <li><a href="~/Agremiado/Agremiados">Agremiados</a></li>
                <li><a href="~/Deducciones/BusquedaDeduccion">Deducciones</a></li>
                <li><a href="">Noticias - Foro</a></li>
                <li><a href="~/Gestiones/Gestiones">Gestiones</a></li>
                <li><a>Hola, @ViewData["Nombre"] @ViewData["Apellido"]</a></li>
            </ul>
        </div>
    </div>
</nav>

<ul class="breadcrumb">
    <li><a href="/Home/Index/">Inicio</a></li>
    <li><a href="/Usuario/Administrador/">Administrativo</a></li>
    <li><a href="/Gestiones/Gestiones/">Gestiones</a></li>
    <li>Nueva Gestión</li>
</ul>

<div>
    <h2>Nueva Gestión</h2>
</div>

<hr class="hr-custom">

@using (Html.BeginForm("Nueva_Gestion", "Gestiones", FormMethod.Post))
{
    <div class="row" id="errores">
        @Html.HiddenFor(g => g.id_Emp)
        <div class="col-md-12">
            <div>
                @Html.LabelFor(g => g.id_TipoGes)
                <br />
                @Html.DropDownListFor(g => g.id_TipoGes, ViewBag.GestionList as SelectList, "---Selecione el tipo de gestion---", new { @class = "form-control validate[required]" })
            </div>
            <br />
            <div>
                @Html.LabelFor(g => g.motivo)
                @Html.TextBoxFor(g => g.motivo, "", new { @class = "form-control validate[required]" })
            </div>
        </div>
    </div>

    <div class="row">
        <div class="column">
            <h3>Vacaciones</h3>
            <hr />
            <div>
                @Html.LabelFor(g => g.tot_vac)
                @Html.TextBoxFor(g => g.tot_vac, "", new { @class = "form-control", @readonly = "true" })
            </div>
            <br />
            <div>
                @Html.LabelFor(g => g.vac_rest)
                @Html.TextBoxFor(g => g.vac_rest, "", new { @class = "form-control", @readonly = "true" })
            </div>
            <br />
            <div>
                @Html.LabelFor(g => g.vac_uti)
                @Html.TextBoxFor(g => g.vac_uti, "", new { @class = "form-control", @readonly = "true" })
            </div>
            <br />
            <div>
                @Html.LabelFor(g => g.vac_solic)
                @Html.TextBoxFor(g => g.vac_solic, "", new { @class = "form-control" })
            </div>
            <br />
            <div>
                @Html.LabelFor(g => g.f_inicio)
                <br />
                @Html.EditorFor(g => g.f_inicio, "", new { @class = "form-control" })
            </div>
            <br />
            <div>
                @Html.LabelFor(g => g.f_fin)
                <br />
                @Html.EditorFor(g => g.f_fin, "", new { @class = "form-control" })
            </div>
        </div>
        <div class="column">
            <h3>Ausencias</h3>
            <hr />
            <div>
                @Html.LabelFor(g => g.cant_au_injus)
                @Html.TextBoxFor(g => g.cant_au_injus, "", new { @class = "form-control", @readonly = "true" })
            </div>
            <br />
            <div>
                @Html.LabelFor(g => g.cant_au_jus)
                @Html.TextBoxFor(g => g.cant_au_jus, "", new { @class = "form-control", @readonly = "true" })
            </div>
            <br />
            <div>
                @Html.LabelFor(g => g.f_aus)
                <br />
                @Html.EditorFor(g => g.f_aus, "", new { @class = "form-control" })
            </div>
            <br />
            <div>
                @Html.LabelFor(g => g.cant_aus)
                @Html.TextBoxFor(g => g.cant_aus, "", new { @class = "form-control" })
            </div>
        </div>
    </div>
    <br />
    <div style="text-align: right">
        <input value="Confirmar" class="btn btn-primary" type="submit" />
    </div>
}


<script src="~/Scripts/bootstrap.min.js"></script>
<script src="~/Scripts/jquery-3.3.1.min.js"></script>
<script src="~/Scripts/jquery.validate.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
<script src="~/Scripts/jquery.validationEngine-en.js"></script>
<script src="~/Scripts/jquery.validationEngine.js"></script>
<script>
    $(document).ready(function () {
        $("#errores").validationEngine();

    });

    $("#errores").validationEngine({ promptPosition: "topleft:-100" });
</script>
<script>
    jQuery(document).ready(function () {
        jQuery("#errores").validationEngine();
    });
</script>

