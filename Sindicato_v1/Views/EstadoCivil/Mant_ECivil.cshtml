@model List<Sindicato_v1.Models.ViewModels.SelectECivilViewModel>

@{
    ViewBag.Title = "Mant_ECivil";
}
<br>
<br>
<nav class="navbar navbar-default navbar-fixed-top">
    <div class="container">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavbar">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand" href="#inicio">SIICE</a>
        </div>
        <div class="collapse navbar-collapse" id="myNavbar">
            <ul class="nav navbar-nav navbar-right">
                <li><a href="~/Agremiado/Agremiados">Agremiados</a></li>
                <li><a href="~/Deducciones/BusquedaDeduccion">Deducciones</a></li>
                <li><a href="">Noticias - Foro</a></li>
                <li><a href="~/Gestiones/Gestiones">Gestiones</a></li>
                <li><a>Hola, @ViewData["Nombre"] @ViewData["Apellido"]</a></li>
            </ul>
        </div>
    </div>
</nav>

<ul class="breadcrumb">
    <li><a href="/Home/Index/">Inicio</a></li>
    <li><a href="/Usuario/Administrador/">Administrativo</a></li>
    <li>Gestión de estados civil</li>
</ul>

<div>
    <h2>Gestión de estados civil</h2>
    <h5>Lista de los estados civíles que estan ingresados en el sistema</h5>
</div>

<hr class="hr-custom" />

<div class="container" style="text-align: left; padding: 5px;">
    <a href="~/EstadoCivil/Nuevo_ECivil" class="btn btn-primary">Nuevo</a>
</div>

<div class="container">
    <div class="table-responsive">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Código</th>
                    <th>Estado civil</th>
                    <th>Opciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj_ECiv in Model)
                {
                    <tr>
                        <th>@obj_ECiv.id_ECiv</th>
                        <td>@obj_ECiv.est_Civil</td>
                        <td>
                            <a class="btn btn-default" href="/EstadoCivil/Editar_ECivil/@obj_ECiv.id_ECiv" style="width:80px; height:35px;">Editar</a>
                            
                            @if (obj_ECiv.estado == 3)
                            {
                                <a class="btn btn-warning" href="/EstadoCivil/Eliminar_E_Civil/@obj_ECiv.id_ECiv" style="width:80px; height:35px; display:none;">Eliminar</a>
                            }
                            else
                            {
                                <a class="btn btn-warning" href="/EstadoCivil/Eliminar_E_Civil/@obj_ECiv.id_ECiv" style="width:80px; height:35px;">Eliminar</a>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>